<h2>New Post</h2>

<%= form_for :post, url: forum_thread_post_path(@forumthread) do |f| %>
	

	<% if @post.errors.any? %>
	<font color="red">
		<div id="error_explanation">
			<h2>
				<%= pluralize(@post.errors.count, "error") %> prohibited
				this thread from being saved:
			</h2>
	</font>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :Post_contents %><br>
		<%= f.text_field :contents %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "Back", :back %>